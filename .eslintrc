{
  "extends": "loopback",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "max-len": ["warn", {
      "code": 120
    }],
    "one-var": "off",
    "no-return-await": "error",
  },
  "plugins": [
    "json"
  ]
}
